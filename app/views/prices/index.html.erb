<h1>Prices</h1>

<table>
  <thead>
    <tr>
      <th>Vendor</th>
      <th></th>
      <th>Product</th>
      <th></th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.vendor.name %></td>
        <td></td>
        <td><%= price.product.name %></td>
        <td></td>
        <td><%= price.price %></td>
        <td></td>
        <td><%= link_to 'Show', price %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

